<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#E9B343">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_lbe_whitelist"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/speedUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
           <ImageView
               android:id="@+id/img1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_phone_accel"
               android:layout_marginLeft="10dp"
               android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机加速"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img1"
                 android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/avl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/avl_arrow_right"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/internalMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/avl1"
                android:text="内存:"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <RelativeLayout

            android:id="@+id/manage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_softmgr"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件管理"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img2"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/avl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/avl_arrow_right"
                android:layout_centerVertical="true"/>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <RelativeLayout

            android:id="@+id/optimize"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_phone_optimize_normal"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="节电优化"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img3"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/avl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/avl_arrow_right"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/elecyric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/avl3"
                android:text="电量"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <RelativeLayout

            android:id="@+id/secret"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_security_privacy_normal"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全与隐私"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img4"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/avl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/avl_arrow_right"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <RelativeLayout
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_traffic_monitor"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="流量监控"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img5"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/avl5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/avl_arrow_right"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/todayLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/avl5"
                android:text="今日"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/home_user_layout_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biz_navigation_tab_pc"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pic"
                android:layout_alignBottom="@+id/pic"
                android:layout_alignTop="@+id/pic"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="18sp"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备份还原设置项"
                    android:textColor="#fff"
                    android:textSize="18sp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/avl_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/firstPager"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_phone_optimize_normal"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img6"
                android:layout_marginLeft="5dp"
                android:textColor="@color/font_selectot_1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <RelativeLayout

            android:id="@+id/defaults"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_security_privacy_normal"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主动防御"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img7"
                android:layout_marginLeft="5dp"
                android:textColor="@color/font_selectot_1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <RelativeLayout

            android:id="@+id/softbox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_security_privacy_normal"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全沙箱"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img8"
                android:layout_marginLeft="5dp"
                android:textColor="@color/font_selectot_1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>


        <RelativeLayout

            android:id="@+id/lanjie"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background">
            <ImageView
                android:id="@+id/img9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backage_selector"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="骚扰拦截"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img9"
                android:layout_marginLeft="5dp"
                android:textColor="@color/font_selectot_1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <RelativeLayout

            android:id="@+id/morePower"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rel_background"
            android:clickable="true">
            <ImageView
                android:id="@+id/img10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_security_privacy_normal"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多功能"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img10"
                android:layout_marginLeft="5dp"
                android:textColor="@color/font_selectot_1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tips_select"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
